# ===========================================
# RouteCalc Pro - Configurações Globais
# ===========================================

# Configurações do Banco de Dados
POSTGRES_DB=rotas_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Configurações da API Backend
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/rotas_db
API_V1_STR=/api/v1
PROJECT_NAME=Sistema de Cálculo de Rotas
ENVIRONMENT=development

# Configurações de CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]

# Configurações de Cache
CACHE_EXPIRATION_HOURS=6
COORDINATES_CACHE_EXPIRATION_HOURS=168

# APIs Externas
ROTAS_BRASIL_API_URL=https://rotasbrasil.com.br/roterizador/buscaRota/

# Configurações do Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NODE_ENV=production

# PgAdmin (opcional)
PGADMIN_EMAIL=admin@routecalc.com
PGADMIN_PASSWORD=admin